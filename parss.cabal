cabal-version: 3.6
name: parss
version: 0.1.0.0

common shared
  default-language: Haskell2010
  default-extensions:
    LambdaCase
    , TupleSections
  ghc-options:
    -Weverything
    -Wno-implicit-prelude
    -Wno-name-shadowing
    -Wno-unused-do-bind
    -Wno-monomorphism-restriction
    -Wno-all-missed-specialisations
    -Wno-missing-deriving-strategies
    -Wno-missing-safe-haskell-mode
    -Wno-safe
    -Wno-unsafe
    -Wno-missing-local-signatures
    -Wno-missing-import-lists
    -Wno-prepositive-qualified-module

library
  import: shared
  hs-source-dirs: src
  exposed-modules:
    Parser
    , Stream
    , Combinators
    , Util
  build-depends:
    base

test-suite test
  import: shared
  hs-source-dirs: test
  other-modules:
    Harness
    , Token
  type: exitcode-stdio-1.0
  main-is: Main.hs
  build-depends:
    base
    , parss
    , HUnit
    , transformers
